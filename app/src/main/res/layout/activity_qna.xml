<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#CBD4B4">

    <!-- FAQ Button -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAQs"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <ImageButton
        android:id="@+id/faqButton"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/dashboard_question_answer"
        android:background="@drawable/rounded_rectangle_background"
        android:contentDescription="FAQs"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#8AA76C"/>

    <!-- Live Chat Button -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat With Assistant"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <ImageButton
        android:id="@+id/liveChatButton"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_chat"
        android:background="@drawable/rounded_rectangle_background"
        android:contentDescription="Live Chat"

        android:backgroundTint="#8AA76C"/>

</LinearLayout>
