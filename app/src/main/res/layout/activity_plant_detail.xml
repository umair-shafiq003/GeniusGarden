<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBD4B4"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Plant Image -->
        <ImageView
            android:id="@+id/plantImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/succulent_aloe" />

        <!-- Plant Description -->
        <TextView
            android:id="@+id/plantDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:background="#E9F3E1"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Steps to Plant Section -->
        <TextView
            android:id="@+id/stepsToPlantTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Steps to plant:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/stepsToPlant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Instructions to Water Section -->
        <TextView
            android:id="@+id/instructionsToWaterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Instructions to water:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/instructionsToWater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
