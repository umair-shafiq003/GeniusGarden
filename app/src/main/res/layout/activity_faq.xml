<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#CBD4B4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frequently Asked Questions"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- FAQ Content -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q1: How often should I water my plants?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: The frequency of watering depends on the type of plant. Generally, water indoor plants when the top inch of soil feels dry and outdoor plants early in the morning or late afternoon."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q2: How do I know if my plant needs more sunlight?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: If your plant has yellowing leaves, elongated stems, or is leaning towards a light source, it may need more sunlight."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q3: What should I do if my plant leaves turn yellow?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Yellowing leaves can be caused by overwatering, underwatering, or nutrient deficiencies. Check the soil moisture and ensure the plant is receiving the right amount of light."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q4: How do I fertilize my plants?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Use a balanced liquid fertilizer during the growing season. Dilute to half strength to avoid over-fertilizing. For outdoor plants, use slow-release granular fertilizer."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q5: Can I grow plants indoors without natural light?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Yes, some plants thrive in low-light conditions, such as Snake Plant, ZZ Plant, and Pothos. You can also use grow lights if necessary."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q6: How do I care for a succulent?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Succulents prefer dry conditions. Water them only when the soil is completely dry, and place them in bright, indirect light with well-draining soil."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q7: What is the best way to propagate plants?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Many plants can be propagated by taking cuttings, such as Pothos or Spider Plant. Place the cutting in water or soil and wait for roots to grow."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q8: What type of soil is best for my plants?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Indoor plants do well in well-draining potting mixes, while succulents need soil with good drainage. Herbs prefer loamy, slightly acidic soil."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q9: How can I control pests in my garden?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: You can control pests by using natural remedies such as neem oil, insecticidal soap, or introducing beneficial insects like ladybugs."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q10: Can I grow herbs indoors?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Yes, herbs like basil, parsley, mint, and chives grow well indoors with sufficient light and well-drained soil."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q11: How do I prune my plants?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Prune plants by cutting back dead or yellowing leaves, stems, and flowers. This helps maintain shape, promote healthy growth, and prevent disease."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q12: What is the difference between indoor and outdoor plants?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Indoor plants are typically more adaptable to lower light and temperature conditions, while outdoor plants require more sunlight and are suited for different environmental conditions."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q13: Why do my plants' leaves curl?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Curling leaves can be caused by underwatering, pest infestations, or environmental stress. Check your plant's water needs and inspect it for signs of pests."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q14: How do I transplant my plant?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: To transplant your plant, gently remove it from its pot, shake off the excess soil, and place it in a new pot with fresh soil that is slightly larger than the old one."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q15: What should I do if my plant is wilting?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Wilting could be a sign of overwatering, underwatering, or root damage. Check the soil moisture and ensure that the plant has proper drainage."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q16: How do I propagate succulents?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Succulent propagation can be done by cutting off a healthy leaf or stem and allowing it to dry for a few days before placing it in well-draining soil."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q17: What is the best temperature for indoor plants?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Most indoor plants thrive in temperatures between 65°F (18°C) and 75°F (24°C). Avoid placing them in cold drafts or near heat sources."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q18: Can I grow a plant from a cutting?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Yes, many plants can be propagated from cuttings. Some common examples include Pothos, Spider Plant, and Rosemary."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q19: How do I know if my plant is overwatered?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Overwatered plants may show yellowing leaves, root rot, or waterlogged soil. Ensure your pot has proper drainage and let the soil dry out between waterings."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q20: What should I do if my plant is not growing?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A: Lack of growth could be due to insufficient light, incorrect watering, or poor soil. Check the plant's requirements and adjust its care accordingly."
            android:textSize="16sp"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Back"
            android:backgroundTint="#8AA76C"
            android:textColor="#FFFFFF" />


    </LinearLayout>
</ScrollView>
